extends layout

block content
    .inner
        h2= title
        form.reviewer(action=`/reviews/${review._id}/edit` method="POST")
            textarea(name="text")= review.text
            .reviewer__meta
                .reviewer__stars
                    each num in [5, 4, 3, 2, 1]
                        input(type="radio" required id=`star${num}` name="rating" value=num checked=(review.rating === num ? true : false))
                        label(for=`star${num}`) #{num} Stars
                input.button(type="submit" value="Edit Review â†’")
    